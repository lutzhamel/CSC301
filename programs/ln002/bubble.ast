-- the bubble sort
load system io.

function bubblesort with l do

  loop
    let swapped = false.
    for i in 0 to len(l)-2 do
      if l@(i+1) <= l@i do
        let (l@i,l@(i+1)) = (l@(i+1),l@i).
        let swapped = true.
      end
    end
    if not swapped do
      break.
    end
  end

  return l.
end

let k = [6,5,3,1,8,7,2,4].
io @println("unsorted array: "+k).
io @println("sorted array: "+(bubblesort k)).
